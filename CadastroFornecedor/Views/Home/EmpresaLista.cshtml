@model IEnumerable<EmpresaModel>
@{
    ViewData["Title"] = "Empresas";
}

<h1 class="mb-4">Listagem de Empresas</h1>

<div class="container">
    <div class="m-4">
        <a asp-controller="Home" asp-action="Empresa">Nova Empresa</a>
    </div>
    @if (Model.Count() > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped" role="grid">
                <thead class="thead-light">
                    <tr>
                        <th>Nome Fantasia</th>
                        <th>CNPJ</th>
                        <th>UF</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (EmpresaModel emp in Model)
                    {
                        <tr>
                            <td>@emp.NomeFantasia</td>
                            <td>@emp.Cnpj</td>
                            <td>@emp.UF</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h4>Nenhuma empresa cadastrada</h4>
    }
</div>